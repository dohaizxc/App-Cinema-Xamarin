<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:cinemaapp="clr-namespace:CinemaApp"
             x:Class="CinemaApp.Views.ChangePasswordPage"
             Title="Đổi mật khẩu">
    <ContentPage.Content>
        <StackLayout Margin="20" Spacing="20">
            <cinemaapp:CustomEntry x:Name="oldPassword"  TextColor="#1C375C" HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center" IsPassword="True" Placeholder="Mật khẩu cũ"/>
            <cinemaapp:CustomEntry x:Name="newPassword" Text="{Binding Password}" TextColor="#1C375C" HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center" IsPassword="True" Placeholder="Mật khẩu mới"/>
            <cinemaapp:CustomEntry x:Name="newPassword2" Text="{Binding Password}" TextColor="#1C375C" HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center" IsPassword="True" Placeholder="Nhập lại mật khẩu mới"/>

            <Button x:Name="btn" CornerRadius="20"
                        Margin="100,15" Text="Đổi mật khẩu" TextColor="White" BackgroundColor="#0053a0"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>